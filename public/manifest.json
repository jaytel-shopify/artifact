{
  "name": "Artifact",
  "short_name": "Artifact",
  "description": "Collaborative presentation tool for design artifacts",
  "start_url": "https://artifact.quick.shopify.io/",
  "display": "standalone",
  "background_color": "#06090a",
  "theme_color": "#06090a",
  "orientation": "portrait-primary",
  "scope": "https://artifact.quick.shopify.io/",
  "icons": [
    {
      "src": "https://artifact.quick.shopify.io/favicons/web-app-manifest-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "https://artifact.quick.shopify.io/favicons/web-app-manifest-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "categories": ["productivity", "design", "collaboration"],
  "shortcuts": [
    {
      "name": "Add Media",
      "url": "https://artifact.quick.shopify.io/?new=media"
    },
    {
      "name": "Add URL",
      "url": "https://artifact.quick.shopify.io/?new=url"
    }
  ],
  "share_target": {
    "action": "/share-file-handler",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "images",
          "accept": [
            "image/jpeg",
            "image/png",
            "image/webp",
            "image/gif",
            "image/avif"
          ]
        },
        {
          "name": "videos",
          "accept": ["video/mp4", "video/mov", "video/quicktime"]
        }
      ]
    }
  }
}
